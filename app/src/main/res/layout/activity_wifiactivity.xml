<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".wifi.WIFIActivity">


    <Button
        android:id="@+id/get_permission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取WIFI相关权限" />

    <Button
        android:id="@+id/get_ssid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取SSID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/get_wifi_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取WIFI状态" />

    <Button
        android:id="@+id/set_wifi_enabled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开或者关闭WIFI" />
</LinearLayout>