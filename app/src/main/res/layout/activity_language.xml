<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".language.LanguageActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/demo_text"
        android:textSize="20sp" />

    <Button
        android:id="@+id/set_chinese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="切换为中文"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/set_english"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="切换为英文"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_chinese" />

    <Button
        android:id="@+id/follow_system"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跟随系统"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_english" />


</androidx.constraintlayout.widget.ConstraintLayout>